<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="628dp"
        android:gravity="center"
        android:text="Supplychain"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView_about"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="25dp"
        android:text="Welcome to Livechain! This is a Blockchain-based app that aims to increase efficiency in various sectors where businesses and MSMEs such as Supply Chain. Use power of cutting-edge Blockchain technology right from your smartphone and increase the productivity of your business. Stay connected with your supply chain at all times. Manufacturers, distributers and retailers get to prove the ownership of their goods on Blockchain, see the location of their their products and reduce the costs of their supply chains by making it more robust and efficient like never before. Go Paperless and track your products on Blockchain! Now!"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="italic"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="151dp"
        android:layout_marginRight="151dp"
        android:layout_marginBottom="21dp"
        android:gravity="center"
        android:text="Powered by"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="101dp"
        app:srcCompat="@drawable/newlogo" />

</RelativeLayout>